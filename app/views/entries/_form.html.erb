<%= form_with(model: entry, local: true) do |f| %>
  <% if entry.errors.any? %>
    <div style="color:red">
      <h4><%= pluralize(entry.errors.count, "error") %> prevented save</h4>
      <ul><% entry.errors.full_messages.each { |m| %><li><%= m %></li><% } %></ul>
    </div>
  <% end %>

  <div>
    <%= f.label :date, "日付" %><br>
    <%= f.date_field :date %>
  </div>

  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, "本文" %><br>
    <%= f.text_area :body, rows: 10 %>
  </div>

  <div>
    <%= f.label :mood, "気分" %><br>
    <%= f.select :mood, Entry.moods.keys.map { |k| [k, k] }, prompt: "選択してください" %>
  </div>

  <div>
    <%= f.label :photo, "写真（任意）" %><br>
    <%= f.file_field :photo, accept: "image/*" %>
    <% if entry.photo.attached? %>
      <div style="margin-top:8px"><%= image_tag entry.photo.variant(resize_to_limit: [600, 600]) %></div>
    <% end %>
  </div>

  <div style="margin-top:12px">
    <%= f.submit %>
  </div>
<% end %>
